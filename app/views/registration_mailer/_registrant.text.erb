<%- if @registration.user.present? %>
  Name: <%= @registration.user.full_name(html: false) %>
  <%- if @registration.user.certificate.present? %>
  Certificate: <%= @registration.user.certificate %>
  <%- end %>
  Email: <%= @registration.user.email %>
<%- else %>
  <%- if @registration.name.present? -%>
  Name:  <%= @registration.name %>
  <%- end -%>
  <%- if @registration.phone.present? -%>
  Phone: <%= @registration.phone %>
  <%- end -%>
  Email: <%= @registration.email %>
<%- end %>
