- if office.present?
  = officer_flag(office, mode: :png)
- if office.present? && (senior || life || granted || permitted)
  hr
- if senior || life
  - if life
    .gold.bold title=('Life Member') LM
  - elsif senior
    .gold title=('Senior Member') SM
- if (senior || life) && (granted.present? || permitted.present?)
  hr
- if granted.present?
  ul.roles
    - granted.each do |g|
      = content_tag(:li, g)
- if permitted.include? :admin
  span.red All
- else
  ul.roles.red
    - (permitted - granted).each do |p|
      = content_tag(:li, p)
