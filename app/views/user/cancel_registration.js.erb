<%= render 'application/update_flashes' %>

<%- if flash[:alert].blank? %>
  <%- if @cancel_link %>
    $("#event_<%= @registration.event.id %>").html("Cancelled").attr("href", "#").addClass("unclickable");
    $("#event_<%= @registration.event.id %>_mobile").html("Cancelled").attr("href", "#").addClass("unclickable");
  <% end %>

  $("#registration_<%= @registration.id %>").fadeOut();
  $("#registration_<%= @registration.id %>_mobile").fadeOut();
<% end %>
