(function() {
  $(function() {
    $('a#hide-editor').click(function(event) {
      event.preventDefault();
      $('div#editor').fadeOut(300, "linear");
      $('a.editor').fadeOut(300, "linear");
      $('a#show-editor').toggle();
      $('a#hide-editor').toggle();
      $.ajax({
        type: "POST",
        url: '<%= auto_hide_url %>',
        data: {
          'page_name': '<%= page_name %>'
        }
      });
    });
  });

}).call(this);
