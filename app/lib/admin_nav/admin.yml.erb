admin:
  button: admin
  order: 50
  display: <%= show_link?(:admin) %>
  items:
    - text: Import Logs
      button: admin
      path: <%= admin_import_logs_path %>
      icon: file-import
    - text: Payments
      button: admin
      icon: circle-dollar-to-slot
      display: <%= show_link?(:admin, strict: true) %>
      children:
        - text: Receipts
          button: admin
          path: <%= receipts_path %>
          icon: file-invoice-dollar
        - text: Promo Codes
          button: admin
          path: <%= admin_promo_codes_path %>
          icon: hands-usd
        - text: Generic Payments
          button: admin
          path: <%= admin_generic_payments_path %>
          icon: money-check-edit-alt
    - text: Downloads
      button: admin
      icon: download
      children:
        - text: ABC Logos
          button: admin
          path: <%= admin_logo_path %>
          icon: image
          fa: swap-opacity
        - text: S3 Links
          button: admin
          path: <%= admin_s3_path %>
          icon: link
          display: <%= show_link?(:admin, strict: true) %>
    - text: Messaging
      button: admin
      icon: messages
      children:
        - text: Send SMS
          button: admin
          path: <%= new_admin_message_path %>
          icon: sms
        - text: Send Email
          button: admin
          path: <%= new_admin_email_path %>
          icon: envelope
        - text: DMARC Reports
          button: admin
          path: <%= admin_dmarc_reports_path %>
          icon: circle-envelope
          display: <%= show_link?(:admin, strict: true) %>
    - text: Technical
      button: admin
      icon: gear-code
      display: <%= show_link?(:admin, strict: true) %>
      children:
        - text: Versions
          button: admin
          path: <%= admin_versions_path %>
          icon: code-branch
        - text: Sidekiq
          button: admin
          path: <%= sidekiq_web_path %>
          icon: gears
