users:
  button: members
  order: 30
  display: <%= show_link?(:users) %>
  items:
    - text: Users List
      path: <%= users_path %>
      icon: users
    - text: Invite User
      path: <%= new_user_invitation_path %>
      icon: user-plus
    - text: Permissions
      path: <%= permit_path %>
      icon: user-shield
    - text: Review
      icon: list
      children:
        - text: Applications
          path: <%= applications_path %>
          icon: user-check
          display: <%= show_link?(:admin, :excom) %>
        - text: Float Plans
          path: <%= float_plans_path %>
          icon: ship
          display: <%= show_link?(:float) %>
    - text: Upload
      icon: upload
      children:
        - text: Import user data
          path: <%= import_users_path %>
          icon: upload
        - text: GLYC members
          path: <%= glyc_members_path %>
          icon: users
    - text: Roster
      icon: clipboard-list
      display: <%= show_link?(:users, :roster) %>
      children:
        - text: Award Recipients
          path: <%= roster_award_recipients_path %>
          icon: trophy
        - text: P/Cs
          path: <%= roster_past_commanders_path %>
          icon: hourglass-end
        - text: Generate
          path: <%= roster_gen_path %>
          icon: file-plus
        - text: Archives
          path: <%= roster_archive_files_path %>
          icon: archive
    - text: Lists
      icon: table-list
      children:
        - text: Birthdays
          icon: birthday-cake
          path: <%= birthdays_path %>
        - text: Merit Marks
          icon: award-simple
          path: <%= merit_marks_path %>
    - children:
        - text: Help
          path: <%= user_help_path %>
          icon: question-circle
    - text: Placecards
      button: admin
      path: <%= new_admin_placecard_path %>
      icon: cards-blank
      display: <%= show_link?(:admin, strict: true) %>
